<h1>Movie Shoe Page</h1>
<%= @movie.name %>
<%= @movie.creation_year %>
<%= @movie.genre %><br>
<h2>List of actors youngest to oldest</h2>
<%= @movie.list_of_actors %>
<h3>Average Age of Actors: <%= @movie.average_age %></h3>

<h1>Add Actor to this movie</h1>

<%= form_tag "/movies/#{@movie.id}", method: :post do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>

  <%= submit_tag "submit actor" %>
<% end %>
